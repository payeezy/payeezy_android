<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.payeezytokenised.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/backg" >

       

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/vassoio"
                android:orientation="vertical"
                android:padding="5dp" >

    <!--commented july 31st          <EditText
                  android:id="@+id/txt_rmsg"
                  android:layout_width="match_parent"
                  android:layout_height="30dp"
                  android:inputType="text"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:textColor="#ff000000" />-->

              <GridLayout
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:background="@color/vassoio"
                  android:columnCount="2"
                  android:orientation="vertical"
                  android:padding="5dp"
                  android:rowCount="30"
                  android:useDefaultMargins="true" >

      <Button
                      android:id="@+id/btn_gettoken"
                      android:layout_width="180dp"
                      android:layout_height="50dp"
                      android:textSize="12sp"
                      android:onClick="onGetGetToken"
                      android:text="@string/getgettoken"
                      android:layout_column="0"
                      android:layout_row="0"
                      />
                  <Button
                  android:id="@+id/btn_getAuthorisetoken"
                  android:layout_width="100dp"
                  android:layout_height="50dp"
                  android:textSize="12sp"
                  android:onClick="onGetAuthoriseToken"
                  android:text="@string/getauthorisetoken"
                  android:layout_column="0"
                  android:layout_row="1"
                      />

                  <Button
                      android:id="@+id/btn_getPurchasetoken"
                      android:layout_width="100dp"
                      android:layout_height="50dp"
                      android:textSize="12sp"
                      android:onClick="onGetPurchaseToken"
                      android:text="@string/getpurchasetoken"
                      android:layout_column="0"
                      android:layout_row="2"
                      />

                      <Button
                            android:id="@+id/btn_getAuthCapturetoken"
                            android:layout_width="130dp"
                            android:layout_height="50dp"
                            android:textSize="12sp"
                            android:onClick="onGetAuthCaptureToken"
                            android:text="@string/getauthcapturetoken"
                            android:layout_column="0"
                            android:layout_row="3"
                            />
                         <Button
                           android:id="@+id/btn_getAuthVoidtoken"
                           android:layout_width="130dp"
                           android:layout_height="50dp"
                           android:textSize="12sp"
                           android:onClick="onGetAuthVoidToken"
                           android:text="@string/getauthvoidtoken"
                           android:layout_column="0"
                           android:layout_row="4"
                           />

                       <Button
                           android:id="@+id/btn_getPurchaseRefundtoken"
                           android:layout_width="130dp"
                           android:layout_height="50dp"
                           android:textSize="12sp"
                           android:onClick="onGetPurchaseRefundToken"
                           android:text="@string/getpurchaserefundtoken"
                           android:layout_column="0"
                           android:layout_row="5"
                           />


                  <Button
                      android:id="@+id/btn_posttoken"
                      android:layout_width="180dp"
                      android:layout_height="50dp"
                      android:textSize="12sp"
                      android:onClick="onPostToken"
                      android:text="@string/posttoken"
                      android:layout_column="0"
                      android:layout_row="6"
                      />

                  <TextView

                      android:id="@+id/textView1"
                      android:layout_width="match_parent"
                      android:layout_height="1600dp"
                      android:text="@string/hello_world"
                      android:layout_column="0"
                      android:layout_row="12"
                      />
</GridLayout>

</LinearLayout>
</ScrollView>


